    "post_install": [
      "if (!(Test-Path \"$env:USERPROFILE\\Documents\\私本管理Plus\")) {",
      "  New-Item -ItemType Directory -Path \"$env:USERPROFILE\\Documents\\私本管理Plus\"",
      "}",
      "if (Test-Path \"$persist_dir\\data\") {",
      "  if (Test-Path \"$env:USERPROFILE\\Documents\\私本管理Plus\") {",
      "    Get-ChildItem \"$env:USERPROFILE\\Documents\\私本管理Plus\" -File | ForEach-Object {",
      "      if (!(Test-Path \"$persist_dir\\data\\$($_.Name)\")) {",
      "        Copy-Item $_.FullName \"$persist_dir\\data\" -Force",
      "      }",
      "    }",
      "    Remove-Item \"$env:USERPROFILE\\Documents\\私本管理Plus\" -Recurse -Force",
      "  }",
      "  New-Item -ItemType SymbolicLink -Path \"$env:USERPROFILE\\Documents\\私本管理Plus\" -Target \"$persist_dir\\data\"",
      "}"
